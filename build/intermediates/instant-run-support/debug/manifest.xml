<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.mymusicplayer"
    android:versionCode="2"
    android:versionName="1.1" >

    <uses-sdk
        android:minSdkVersion="16"
        android:targetSdkVersion="24" />

    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/icon"
        android:label="@string/app_real_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme" >
        <activity android:name="activity.MusicActivity" />
        <activity android:name="activity.LocalMusicActivity" />
        <activity android:name="activity.SearchActivity" />
        <activity android:name="activity.PlayingActivity" />
        <activity android:name="activity.MainActivity" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <service android:name="service.MusicPlayerService" >
            <intent-filter>
                <action android:name="player" />
            </intent-filter>
        </service>

        <provider
            android:name="com.android.tools.fd.runtime.InstantRunContentProvider"
            android:authorities="com.example.mymusicplayer.com.android.tools.fd.runtime.InstantRunContentProvider"
            android:multiprocess="true" />
    </application>

</manifest>